<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>
  <% unless @repos.nil? %>
    <section class="github">
      <h1>GitHub</h1>
      <% @repos.each do |repo| %>
        <div class="repo">
          <ul>
            <li class="html_url"><%= link_to(repo.name, repo.html_url) %></li>
          </ul>
        </div>
      <% end %>
    </section>

    <section class="followers">
      <h1>Followers</h1>
      <% @followers.each do |follower| %>
        <div class="follower">
          <ul>
            <li class="follower-link"><%= link_to(follower.login, follower.html_url) %></li>
          </ul>
        </div>
      <% end %>
    </section>

    <section class="followings">
      <h1>Followings</h1>
      <% @followings.each do |following| %>
        <div class="following">
          <ul>
            <li class="following-link"><%= link_to(following.login, following.html_url) %></li>
          </ul>
        </div>
      <% end %>
    </section>
  <% end %>
</section>
